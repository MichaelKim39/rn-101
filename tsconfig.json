{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./app"
  },
  "paths": {
    "components/*": [
      "src/components/*"
    ],
    "screens/*": [
      "src/screens/*"
    ],
    "assets/*": [
      "assets/*"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
